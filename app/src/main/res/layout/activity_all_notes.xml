<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NoteActivity">


<include android:id="@+id/my_toolbar"
    layout="@layout/toolbar_spinner_layout"/>

  <ImageView
      android:id="@+id/NRV_emptymessge"
      android:visibility="gone"
      android:background="@drawable/ic_note_add_black_24dp"
      android:layout_centerInParent="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

  </ImageView>
  <androidx.recyclerview.widget.RecyclerView
      android:layout_below="@+id/my_toolbar"
      android:layout_gravity="bottom"
      android:id="@+id/NRV_recyclerview"
      android:layout_width="match_parent"
    android:layout_height="match_parent">





  </androidx.recyclerview.widget.RecyclerView>





</RelativeLayout>