<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Miscellaneous.QuickNotesActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <Button
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:onClick="insert_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Notes"
        >
    </Button>

    <Button
        android:textColor="@android:color/white"
    android:layout_marginTop="8dp"
    android:textSize="20dp"
    android:onClick="insert_categories"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text=" Categories"
    >
</Button>
    <Button
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:onClick="insert_notesAndCatgories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text =" Notes and Categories"
        >
    </Button>
    <Button
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:onClick="check_category_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text =" Categories size"
        >
    </Button>

    <TextView
        android:id="@+id/QNA_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>



</RelativeLayout>