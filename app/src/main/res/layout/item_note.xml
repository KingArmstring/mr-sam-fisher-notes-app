<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp">


    <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="8dp">

            <CheckBox
                android:visibility="visible"
                android:id="@+id/NI_Checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </CheckBox>



<LinearLayout

    android:layout_toEndOf="@id/NI_Checkbox"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


           <TextView
               android:text="Title"
               android:id="@+id/NI_Title"
               android:textAppearance="@style/TextAppearance.AppCompat.Large"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           </TextView>
           <TextView
               android:text="Information"
               android:layout_marginTop="8dp"
               android:layout_below="@id/NI_Title"
               android:lines="2"
               android:ellipsize="end"
               android:id="@+id/NI_description"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           </TextView>



    <LinearLayout
        android:id="@+id/NI_LL_RT"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/NI_reps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/NI_Title"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="Repetition"></TextView>

        <TextView
            android:text="Total Time: No Activiy"
            android:layout_marginTop="8dp"
            android:layout_below="@id/NI_Title"
            android:ellipsize="end"
            android:id="@+id/NI_time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/NI_LL_CL"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_marginTop="8dp"
            android:text="Created 00/00/00 "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/NI_timecreated">
        </TextView>

        <TextView
            android:textAlignment="textEnd"
            android:layout_marginTop="8dp"
            android:text="Last Used: 00/00/00 00:00:00 XX"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/NI_lastused">
        </TextView>

    </LinearLayout>




</LinearLayout>

       </RelativeLayout>







</androidx.cardview.widget.CardView>